<div id="News">
	<div id="NewsFeed">
		<h1>Settings</h1>
	</div><!-- end NewsFeed div-->
	
	<div id="Settings">	
			
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
				  <%= devise_error_messages! %>
				
					<div id="Profile_Picture">
						<%= image_tag("#{current_user.image}", :size => "90x90") %>
					</div>

					<div id="Info_Bar">
					<h2>Name:</h2>
				  <%= f.text_field :name %></div>

				  <div id="Info_Bar">
					<h2>Email:</h2>
				  <%= f.email_field :email %></div>
				
					<div id="Info_Bar">
						<h2>Picture:</h2>
						<%= f.file_field :image %>
					</div>
					
					<div id="Info_Spacer">&nbsp</div><!-- end Settings_Spacer div-->
					
					<div id="Change_Password">
						<center><h3>Change Password</h3></center>
						<h2>New Password:</h2><%= f.password_field :password %>
						<h2>Confirm Password:</h2><%= f.password_field :password_confirmation %>
					</div>
					
					<div id="Settings_Spacer">&nbsp</div><!-- end Settings_Spacer div-->

					<div id="Linked_Accounts">
						<center><h3>Linked Accounts</h3></center>
						<% if not current_user.authentications.size > 0 %>
							<%= link_to image_tag("/images/foursquare/connect-blue.png"), '/auth/foursquare' %>
						<% else %>
							<%= image_tag("/images/foursquare.png")%>
							<%= link_to "Unlink Account", current_user.authentications[0], :confirm => 'Are you sure you want to unlink this account?', :method => :delete %>
						<% end %>
					</div>
					
					<div id="Settings_Spacer">&nbsp</div><!-- end Settings_Spacer div-->
					
					<div id="Account">
						<center><h3>Account</h3></center>
							<%= f.label :current_password %>
						  <%= f.password_field :current_password %>
							<%= f.submit "Update" %>
						<%= link_to "Cancel Account", registration_path(resource_name), :confirm => "Are you sure you want to cancel your account?", :method => :delete %>
					</div>
					
				</div>
			
	
				
			</div><!-- end News div-->	
			
			<div id="Content_Spacer">&nbsp</div><!-- end Content_Spacer div-->
				<% end %>


				